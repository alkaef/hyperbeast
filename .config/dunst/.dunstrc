[global]
    font = "Droid Sans 8"
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
   geometry = "200x5-6+30"
#    geometry = "200x5+600+690"
    transparency = 40
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 20
    horizontal_padding = 8
    separator_color = "#585858"
    startup_notification = false
    # https://github.com/knopwob/dunst/issues/26#issuecomment-36159395
    icon_position = left
    icon_folders = /usr/share/icons/Papirus-Dark/16x16/actions
    history_length = 10

[frame]
    width = 0
    color = "#383838"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
#    background = "#282828"
    background = "#000000"
    foreground = "#ffffff"
    timeout = 5

[urgency_normal]
#    background = "#383838"
    background = "#000000"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#ab4642"
    foreground = "#ffffff"
    timeout = 0
